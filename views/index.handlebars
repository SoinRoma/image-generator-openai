<h1 class="text-center">Image Generator</h1>

<form action="/" method="post">
  <input
    type="text"
    class="form-control mb-2"
    placeholder="Enter img params"
    required
    name="prompt"
  />
  <select name="size" class="form-control mb-2">
    <option value="256x256">Small</option>
    <option value="512x512">Medium</option>
    <option value="1024x1024">Large</option>
  </select>
  <input
    type="number"
    class="form-control mb-2"
    required
    value="1"
    name="number"
  />
  <button class="btn btn-primary">Generate</button>
</form>

{{#if images}}
  <div class="row">
    {{#each images}}
      <img src="{{this.url}}" alt="image" class="img-fluid rounded" />
    {{/each}}
  </div>
{{/if}}